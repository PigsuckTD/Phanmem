<Window x:Class="QuanLyNhaHang.View.ThongTinDatBanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin đặt bàn" 
        Height="750" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="#1E1E1E" CornerRadius="15" BorderBrush="#FFA500" BorderThickness="2">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <StackPanel Grid.Row="0" Margin="0 0 0 20">
                <TextBlock Text="THÔNG TIN ĐẶT BÀN" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#FFA500"
                           HorizontalAlignment="Center"/>
                <Border Background="#FFA500" 
                        Height="30" 
                        CornerRadius="5"
                        Margin="0 10 0 0"
                        Padding="10 0">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="White">
                        <Run Text="Mã đặt bàn: #"/>
                        <Run Text="{Binding MaDatBan}"/>
                    </TextBlock>
                </Border>
            </StackPanel>

            <!-- THÔNG TIN -->
            <Border Grid.Row="1" 
                    Background="#252525" 
                    CornerRadius="10" 
                    Padding="25"
                    Margin="0 0 0 20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Số bàn -->
                        <Border Background="#FFA500" 
                                CornerRadius="8" 
                                Padding="15" 
                                Margin="0 0 0 20">
                            <TextBlock FontSize="22" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       HorizontalAlignment="Center">
                                <Run Text="🪑 BÀN SỐ: "/>
                                <Run Text="{Binding SoBan}" FontSize="26"/>
                            </TextBlock>
                        </Border>

                        <!-- Tên khách -->
                        <StackPanel Margin="0 0 0 15">
                            <TextBlock Text="👤 TÊN KHÁCH HÀNG" 
                                       Foreground="#888" 
                                       FontSize="12"
                                       Margin="0 0 0 5"/>
                            <TextBlock Text="{Binding TenKhach}" 
                                       Foreground="White" 
                                       FontWeight="Bold"
                                       FontSize="16"/>
                        </StackPanel>

                        <!-- SĐT -->
                        <StackPanel Margin="0 0 0 15">
                            <TextBlock Text="📞 SỐ ĐIỆN THOẠI" 
                                       Foreground="#888"
                                       FontSize="12"
                                       Margin="0 0 0 5"/>
                            <TextBlock Text="{Binding SDT}" 
                                       Foreground="White" 
                                       FontWeight="Bold"
                                       FontSize="16"/>
                        </StackPanel>

                        <!-- Ngày giờ -->
                        <Grid Margin="0 0 0 15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0 0 10 0">
                                <TextBlock Text="📅 NGÀY ĐẶT" 
                                           Foreground="#888"
                                           FontSize="12"
                                           Margin="0 0 0 5"/>
                                <TextBlock Text="{Binding NgayDatDisplay}" 
                                           Foreground="White" 
                                           FontWeight="Bold"
                                           FontSize="15"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10 0 0 0">
                                <TextBlock Text="🕐 GIỜ ĐẶT" 
                                           Foreground="#888"
                                           FontSize="12"
                                           Margin="0 0 0 5"/>
                                <TextBlock Text="{Binding GioDat}" 
                                           Foreground="#FFA500" 
                                           FontWeight="Bold"
                                           FontSize="18"/>
                            </StackPanel>
                        </Grid>

                        <!-- Số người -->
                        <StackPanel Margin="0 0 0 15">
                            <TextBlock Text="👥 SỐ NGƯỜI" 
                                       Foreground="#888"
                                       FontSize="12"
                                       Margin="0 0 0 5"/>
                            <TextBlock Foreground="White" 
                                       FontWeight="Bold"
                                       FontSize="16">
                                <Run Text="{Binding SoNguoi}"/>
                                <Run Text=" người"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Ưu đãi -->
                        <StackPanel Margin="0 0 0 15"
                                    Visibility="{Binding HasUuDai}">
                            <TextBlock Text="🎁 ƯU ĐÃI" 
                                       Foreground="#888"
                                       FontSize="12"
                                       Margin="0 0 0 5"/>
                            <TextBlock Text="{Binding UuDai}" 
                                       Foreground="#4CAF50" 
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Ghi chú -->
                        <StackPanel Margin="0 0 0 15"
                                    Visibility="{Binding HasGhiChu}">
                            <TextBlock Text="📝 GHI CHÚ" 
                                       Foreground="#888"
                                       FontSize="12"
                                       Margin="0 0 0 5"/>
                            <TextBlock Text="{Binding GhiChu}" 
                                       Foreground="White" 
                                       FontStyle="Italic"
                                       FontSize="13"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Thời gian còn lại -->
                        <Border Background="#FF4444" 
                                CornerRadius="5" 
                                Padding="12"
                                Margin="0 5 0 0">
                            <TextBlock Text="{Binding ThoiGianConLai}" 
                                       Foreground="White"
                                       FontSize="13"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- BUTTONS -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Đóng -->
                <Button Grid.Column="0"
                        Content="ĐÓNG"
                        Height="50"
                        Margin="0 0 5 0"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="#666"
                        BorderThickness="2"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Click="BtnClose_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#333"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Hủy đặt bàn -->
                <Button Grid.Column="1"
                        Content="❌ HỦY ĐẶT"
                        Height="50"
                        Margin="5 0 5 0"
                        Background="#FF4444"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="Bold"
                        Click="BtnCancel_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#CC0000"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Khách đến -->
                <Button Grid.Column="2"
                        Content="✓ KHÁCH ĐẾN"
                        Height="50"
                        Margin="5 0 0 0"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="Bold"
                        Click="BtnKhachDen_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#45A049"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>